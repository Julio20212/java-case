package lpa;

import java.util.Scanner;

public class Ativternário3 {

	public static void main(String[] args) {
	Scanner ler = new Scanner(System.in);
	
	System.out.println("Informe o salário do funcionário: ");
	double salario = ler.nextDouble();
	System.out.println("Diga quantos anos o funcionário está trabalhando na empresa: ");
	int ano = ler.nextInt();
	
	double bonus;
	if (ano<=3) {
		bonus = salario*0.05;
	}
	else {
		bonus = salario*0.07;
		}
	System.out.println("O total de bônus que recebeu foi:  " + bonus);
	
	
	}
}

